<div class="card card-body p-4 rounded-10 bg-dark text-white">
  <h3>Add a Service ðŸ’»</h3>
  <form action="/tasks/add" method="post">
    {{! nombre del cliente }}
    <div class="mb-3">
      <label for="title" class="form-label">Customer Name:</label>
      <input
        type="text"
        class="form-control"
        id="title"
        placeholder="Customer Name"
        name="title"
        autofocus
      />
    </div>
    {{! nombre del dispositivo }}
    <div class="mb-3">
      <label for="devicename" class="form-label">Device Name:</label>
      <input
        type="text"
        class="form-control"
        id="devicename"
        placeholder="Device Name"
        name="devicename"
        autofocus
      />
    </div>
    {{! input fecha }}
    <div class="col-mb-2">
      <label for="date" class="form-label">ðŸ“¥Date of Admission:</label>
      <input type="date" class="form-control" id="date" placeholder="date of admission" name="date" style="width: 50%;">
    </div>
    {{! input fecha egreso }}
    <div class="col-mb-2">
      <label for="dateegress" class="form-label">ðŸ“¤Estimated Egress Date:</label>
      <input type="date" class="form-control" id="dateegress" placeholder="egress date" name="dateegress" style="width: 50%;">
    </div>
    {{! input de descripcion }}
    <div class="mb-3">
      <label for="description" class="form-label">Problem Description/Diagnostic:</label>
      <textarea
        class="form-control"
        id="description"
        cols="80"
        name="description"
        placeholder="Add a description"
      ></textarea>
    </div>
    {{! aki empieza los radio bottons }}
    <label for="description" class="form-label">The service is:</label>
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="sexo"
        value="Urgent"
      />
      <label class="form-check-label" for="flexRadioDefault1">
        Urgent
      </label>
    </div>
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="sexo"
        value="Not Urgent"
        checked
      />
      <label class="form-check-label" for="flexRadioDefault2">
        Not Urgent
      </label>
    </div>
    {{! aki termina los radio bottons }}
    <button type="submit" class="btn btn-primary" style="border: #8E05C2; background-color:#8E05C2;">Add</button>
  </form>
</div>