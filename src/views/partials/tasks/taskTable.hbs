{{! empieza barra para poner los botones para hacer ordenamiento}}
<div class="card card-body p-2 rounded-10 text-white" style="background-color: #610094;">
  <div>
    <label style="font-size: large;"><strong>Order by: </strong></label>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
          Order Table
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
          <li><a class="dropdown-item active" href="#">All</a></li>
          <li><a class="dropdown-item" href="#">Urgent</a></li>
          <li><a class="dropdown-item" href="#">Not Urgent</a></li>
        </ul>
      </div>
  </div>
</div>
{{! empieza barra para poner los botones para hacer ordenamiento}}

{{#if tasks}} {{! abre condicional de la tabla, si la tabla tiene algo, lo muestra}}
{{! aqui podria ir la condicional de urgente}}
<table  class="table table-dark table-hover">
  <thead> {{! cabezera de la tabla}}
    <tr>
      <th scope="col">NÂ°</th>
      <th scope="col">Device Name</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Operations</th>
    </tr>
  </thead> {{! termina cabezera de la tabla}}
  <tbody.table-hover>
    {{#each tasks}}
      <tr>
        <td>{{inc @index}}</td> {{! numero de fila de tabla}}
        <td><strong>{{devicename}}</strong></td> {{! titulo de la tarea}}
        <td>{{description}}</td> {{! descripcion de la tarea}}
        <td>{{sexo}}</td>
        <td>
            {{#if done}} {{! empieza if del boton DONE/UNDONE}}
              <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                  <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                </svg>
                Done
              </a>
            {{else}}
              <a class="btn btn-danger" href="/tasks/{{_id}}/toggleDone">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg>
                Undone
              </a>
            {{/if}} {{! termina if del boton DONE/UNDONE}}

            <a class="btn btn-warning" href="/tasks/{{_id}}/delete">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-trash-fill" viewBox="0 0 16 16">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
              </svg>
            </a> {{! boton para eliminar tarea}}
            <a class="btn btn-info" href="/tasks/{{_id}}/edit">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
              </svg>
            </a> {{! boton para editar tarea}}
        </td>
      </tr>
    {{/each}} 
  </tbody>
</table>
{{else}} {{! De los contrario muestra un mensaje de "No Tasks"}}
<div>
  <div>
    <h1>No Tasks!</h1>
    <img src="/img/no-task.png" class="w-25">
  </div>
</div>
{{/if}} {{! cierra condicional}}